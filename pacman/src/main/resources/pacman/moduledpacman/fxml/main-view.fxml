<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<SplitPane dividerPositions="0.3" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="pacman.moduledpacman.MenuController">
    <AnchorPane id="ap_r" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                style="-fx-background-color: pink; -fx-border-color: white;">
        <VBox alignment="CENTER" layoutX="3.0" layoutY="3.0" prefHeight="413.0" prefWidth="355.0" spacing="20.0"
              AnchorPane.bottomAnchor="2.0" AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="-2.0"
              AnchorPane.topAnchor="2.0">
            <Button id="b_play" mnemonicParsing="false" onMouseClicked="#onPlayButtonClick"
                    style="-fx-background-color: lemonchiffon; -fx-border-color: cornsilk;" text="START GAME">
                <font>
                    <Font name="Consolas Bold" size="18.0"/>
                </font>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#onRulesButtonClick"
                    style="-fx-background-color: blanchedalmond; -fx-border-color: cornsilk;" text="Rules">
                <font>
                    <Font name="Consolas Bold" size="15.0"/>
                </font>
            </Button>
            <Button id="b_about" mnemonicParsing="false" onMouseClicked="#onAboutBottomClick"
                    style="-fx-background-color: blanchedalmond; -fx-border-color: beige;" text="About">
                <font>
                    <Font name="Consolas Bold" size="15.0"/>
                </font>
            </Button>
        </VBox>
    </AnchorPane>
    <AnchorPane id="ap_l" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                style="-fx-background-color: lavender; -fx-border-color: white;">
        <VBox alignment="CENTER" layoutX="131.0" layoutY="192.0" AnchorPane.bottomAnchor="2.0"
              AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="-2.0" AnchorPane.topAnchor="2.0">
            <Label id="lmenu" fx:id="lmenu" alignment="CENTER" contentDisplay="CENTER" nodeOrientation="LEFT_TO_RIGHT"
                   style="-fx-alignment: center;" text="Hello! Welcome to Pacman Game" textAlignment="CENTER"
                   textOverrun="CLIP" wrapText="true">
                <font>
                    <Font name="Consolas Bold" size="15.0"/>
                </font>
            </Label>
        </VBox>
    </AnchorPane>
</SplitPane>
